@model SMOKESTYLES_ADMIN.Models.Product
@{
    ViewBag.Title = "EditProduct";
}

<h4 class="info"><span class="glyphicon glyphicon-info-sign"></span>Edit Product</h4>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Products <small> Add New Products</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i><a href="/admin/index"> Dashboard</a>
            </li>
            <li>
                <i class="fa fa-chain"></i><a href="/admin/viewproducts"> Products</a>
            </li>
            <li class="active">
                <i class="fa fa-chain"></i><a href="/admin/addProducts"> Add Products</a>
            </li>

        </ol>
    </div>
</div>

<div class="col-sm-8 contact-form">
    <form id="contact" method="post" action="/Admin/UpdateProductConfirm" class="form" role="form">
        <div class="row">
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(u => u.product_id, new { @placeholder = Model.product_id, @class = "form-control", @value = Model.product_id, @id = "name", @name = "name", @required = "required", @autofocus = "autofocus"})
            </div>
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(u => u.product_name, new { @placeholder = Model.product_name, @class = "form-control", @id = "name", @name = "name", @required = "required", @autofocus = "autofocus" })
            </div>
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(u => u.product_unit_price, new { @placeholder = Model.product_unit_price, @class = "form-control", @required = "required" })

            </div>
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(u => u.product_quantity, new { @placeholder = Model.product_quantity, @class = "form-control", @required = "required" })

            </div>
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(u => u.product_category, new { @placeholder = Model.product_category, @class = "form-control", @required = "required" })

            </div>
        </div>
        @Html.TextAreaFor(u => u.product_description, new { @placeholder = Model.product_description, @class = "form-control", @rows = "5" })

        <br />
        <div class="row">
            <div class="col-xs-12 col-md-12 form-group">
                <button class="btn btn-primary pull-right" type="submit">Update</button>
            </div>
        </div>
    </form>
</div>