@model SMOKESTYLES_ADMIN.Models.Product
@{
    ViewBag.Title = "Add Products - Smoke Styles";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Products <small> Add New Products</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i><a href="/admin/index"> Dashboard</a>
            </li>
            <li>
                <i class="fa fa-chain"></i><a href="/admin/viewproducts"> Products</a>
            </li>
            <li class="active">
                <i class="fa fa-chain"></i><a href="/admin/addProducts"> Add Products</a>
            </li>

        </ol>
    </div>
</div>

<div class="col-sm-8 contact-form">
    <form id="contact" method="post" action="/Admin/AddNewProduct" class="form" role="form">
        <div class="row">
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(u => u.product_name, new { @placeholder = "Product Name", @class ="form-control", @id = "name" ,@name = "name", @required = "required", @autofocus = "autofocus"  })
            </div>
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(u => u.product_unit_price, new { @placeholder = "Unit Price", @class = "form-control",  @required = "required"})

            </div>
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(u => u.product_quantity, new { @placeholder = "Quantity", @class = "form-control",  @required = "required" })

            </div>
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(u => u.product_category, new { @placeholder = "Category", @class = "form-control",  @required = "required" })

            </div>
        </div>
        @Html.TextAreaFor(u => u.product_description, new { @placeholder = "Description", @class = "form-control", @rows ="5" })

        <br />
        <div class="row">
            <div class="col-xs-12 col-md-12 form-group">
                <button class="btn btn-primary pull-right" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>