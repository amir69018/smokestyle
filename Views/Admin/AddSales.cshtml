@model SMOKESTYLES_ADMIN.Models.Sale
@{
    ViewBag.Title = "AddSales";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Products <small> Add New Products</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i><a href="/admin/index"> Dashboard</a>
            </li>
            <li>
                <i class="fa fa-chain"></i><a href="/admin/viewSales"> Sales</a>
            </li>
            <li class="active">
                <i class="fa fa-chain"></i><a href="/admin/addSales"> New Sales</a>
            </li>

        </ol>
    </div>
</div>

<div class="col-sm-8 contact-form">
    <form id="contact" method="post" action="/admin/saveNewSale" class="form" role="form">
        <div class="row">
            <div class="col-xs-6 col-md-6 form-group">
                <!--                    <option value="" disabled selected>Select your Product</option>
                -->
                @Html.DropDownListFor(m => m.sale_product_id, ViewBag.Products as SelectList, "--Select Product--", new { @class = "form-control", @id = "SelectProduct", @name = "SelectProduct" })
                

            </div>
            <div class="col-xs-6 col-md-6 form-group">
                <input type="text" class="form-control" id="quantityInHand" placeholder="Quantity In Hand" disabled />
            </div>
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(m => m.sale_product_quantity_sold, new { @class = "form-control", @id = "quantitySold", @type = "text", @required = "required", @placeholder = "Quantity Sold" })
                <!--  <input class="form-control" id="quantitySold" name="quantitySold" placeholder="Quantity" type="text" required />
                -->
            </div>
            <div class="col-xs-6 col-md-6 form-group">
                @Html.TextBoxFor(m => m.sale_product_unit_price, new { @class = "form-control", @id = "unitPrice", @value = 10, @type = "text", @required = "required", @placeholder = "Unit Price" })
            </div>
            <div class="col-xs-6 col-md-6 form-group">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.sale_amount, new { @class = "form-control", @id = "totalAmount", @type = "text", @required = "required", @placeholder = "Total Amount" })
                    <span class="input-group-btn">
                        <button class="btn btn-info" id="calculate" type="button">Calculate</button>
                    </span>
                </div><!-- /input-group -->
            </div>
            <div class="col-xs-6 col-md-6 form-group">
                <button class="btn btn-primary btn-circle form-control pull-right" type="submit">Submit</button>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-md-12 form-group">
            </div>
        </div>
    </form>
</div>