@model SMOKESTYLES_ADMIN.Models.Admin
@{
    Layout = null;

}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon.png">
    <title>SMOKESTYLE | Login</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="/css/animate.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet" />


</head>

<body class="gray-bg">
    <div class="logo-float">
        <center>
            <h1 class="logo-name">SMOKESTYLES</h1>
        </center>
    </div>
    <div id="test">
        <div class="middle-box text-center  loginscreen animated fadeInDown">
            <h3>Welcome to SmokeStyles!</h3>
            <div>



                <p>Login in. To see it in action.</p>
                <form class="m-t" role="form" action="/Admin/VerifyAdmin">
                    <div class="form-group">
                        @Html.TextBoxFor(y => y.admin_name, new { @class = "form-control", @placeholder = "Username", @required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(y => y.admin_password, new { @type = "password", @class = "form-control", @placeholder = "Username", @required = "required" })
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
                </form>
            </div>
        </div>
    </div>
    <!-- Mainly scripts -->
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>

</html>
